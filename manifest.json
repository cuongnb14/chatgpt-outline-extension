{
    "manifest_version": 3,
    "name": "ChatGPT Outline",
    "version": "1.0",
    "description": "Tạo dàn bài cho cuộc hội thoại ChatGPT",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "ChatGPT Outline"
    }
}